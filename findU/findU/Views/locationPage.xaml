<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="findU.Views.locationPage"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">
    <ContentPage.Content >
        <Grid>
            <maps:Map x:Name="map" IsShowingUser="True" MapType="Street" TrafficEnabled="True" VerticalOptions="FillAndExpand"   />
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand">
                <Label x:Name="txtLastUpdatedTime" TextColor="Black"  FontAttributes="Bold" />
                <Label x:Name="txtMessage" />
            </StackLayout>
        </Grid>

            


    </ContentPage.Content>
</ContentPage>